doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/oauth-google.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap")
  body
    .container
      .login-card
        .logo
          img(src="/images/logo-x.png", alt="Twitter Logo")
          h1 Twitter API
        
        h2 Welcome
        p Sign in with your Google account to continue
        
        .google-btn-container
          a.google-btn(href="/users/oauth/google")
            .google-icon-wrapper
              img.google-icon(src="https://www.google.com/images/branding/googleg/1x/googleg_standard_color_128dp.png", alt="Google logo")
            span.btn-text Sign in with Google
        
        .footer
          p.small-text By signing in, you agree to our 
            a(href="#") Terms of Service
            |  and 
            a(href="#") Privacy Policy